<h1>Make your awesome wine pairing post! (If you can...)</h1>

<%= form_for(@post) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :content %>
<%= f.text_area :content %>
<%= f.label "Select a Pairing" %>

<%=f.collection_select :pairing_id, Pairing.all, :id, :pairing_with_wine_cheese_names %>
<%= f.submit 'Create Post' %>
<% end %>

<%= link_to "Don't See Your Pairing Here? Create A New One", new_pairing_path %>
